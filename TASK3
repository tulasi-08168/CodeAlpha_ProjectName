import random

words = ['elephant', 'guitar', 'sunflower', 'python', 'piano']
word = random.choice(words)
guessed = ['_'] * len(word)
attempts = 6
used = []

print("ðŸŽ® Welcome to Hangman!")

while attempts > 0 and ''.join(guessed) != word:
    print("\nWord:", ' '.join(guessed))
    print("Attempts left:", attempts)
    guess = input("Enter a letter: ").lower()

    if guess in used or len(guess) != 1 or not guess.isalpha():
        print(" Invalid or already used letter.")
        continue

    used.append(guess)

    if guess in word:
        for i in range(len(word)):
            if word[i] == guess:
                guessed[i] = guess
        print("âœ… Correct!")
    else:
        attempts -= 1
        print(" Wrong!")

if ''.join(guessed) == word:
    print("\nðŸŽ‰ You won! The word was:", word)
else:
    print("\n You lost! The word was:", word)